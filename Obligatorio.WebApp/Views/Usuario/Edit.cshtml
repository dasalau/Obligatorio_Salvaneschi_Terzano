@model Obligatorio.LogicaAplicacion.Dtos.Usuarios.UsuarioDtoAlta

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body">
                <h2 class="text-center mb-4 text-uppercase fw-semibold">Editar Usuario</h2>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label fw-bold"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contrasenia" class="form-label fw-bold"></label>
                        <input asp-for="Contrasenia" class="form-control" />
                        <span asp-validation-for="Contrasenia" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                    <p>@ViewBag.Mensaje</p>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Index" class="text-decoration-none">← Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}