@model Obligatorio.LogicaAplicacion.Dtos.Usuarios.UsuarioDtoListado

@{
    ViewData["Title"] = "Detalle de Usuario";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body">
                <h2 class="text-center mb-4 text-uppercase fw-semibold">Detalle de Usuario</h2>

                <dl class="row">
                    <dt class="col-sm-4 fw-bold">ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4 fw-bold">Nombre</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4 fw-bold">Apellido</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                    <dt class="col-sm-4 fw-bold">Contraseña</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Contrasenia)</dd>

                    <dt class="col-sm-4 fw-bold">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-bold">Rol</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Rol)</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-secondary" })
                    <a asp-action="Index" class="btn btn-outline-primary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>