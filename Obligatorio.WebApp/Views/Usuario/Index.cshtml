@model IEnumerable<Obligatorio.LogicaAplicacion.Dtos.Usuarios.UsuarioDtoListado>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-11">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body">
                <h2 class="text-center mb-4 text-uppercase fw-semibold">Listado de Usuarios</h2>

                <div class="d-flex justify-content-end gap-2 mb-3">
                    <!-- <a asp-action="CreateAdministrador" class="btn btn-outline-primary">Alta de Administrador</a> -->
                    
                    <a asp-action="CreateGerente" class="btn btn-outline-primary">Alta de Gerente</a>
                    <a asp-action="CreateEmpleado" class="btn btn-outline-primary">Alta de Empleado</a>
                </div>

                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Apellido)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Rol)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Detalles</a>
                                    <!-- <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a> -->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>