@model Obligatorio.LogicaAplicacion.Dtos.Pagos.MesAnioDto

@{
    ViewData["Title"] = "PagosMesAnio";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body">
                <h2 class="text-center mb-4 text-uppercase fw-semibold">Reporte Mensual de Pagos</h2>

                <form asp-action="PagosMesAnio">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Campo Mes -->
                    <div class="mb-3">
                        <label asp-for="Mes" class="form-label fw-bold">Mes</label>
                        <input asp-for="Mes" class="form-control" />
                        <span asp-validation-for="Mes" class="text-danger"></span>
                    </div>

                    <!-- Campo Año -->
                    <div class="mb-3">
                        <label asp-for="Anio" class="form-label fw-bold">Año</label>
                        <input asp-for="Anio" class="form-control" />
                        <span asp-validation-for="Anio" class="text-danger"></span>
                    </div>

                    <!-- Botón de envío -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Consultar</button>
                    </div>

                    <!-- Mensaje informativo -->
                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
                    {
                        <div class="alert alert-info mt-3 text-center">@ViewBag.Mensaje</div>
                    }
                </form>

                <!-- Enlace de retorno -->
                <div class="mt-3 text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">← Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
