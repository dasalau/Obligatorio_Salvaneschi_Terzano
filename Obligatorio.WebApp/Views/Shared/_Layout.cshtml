<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obligatorio.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Obligatorio.WebApp.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-image: url('/img/fondo-home.jpg');
            background-size: cover;
            background-position: top center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            background-color: #1f2d3d;
        }

        .navbar-brand {
            color: #f8f9fa;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #f8f9fa !important;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 5px;
            margin-right: 5px;
        }

            .nav-link:hover {
                background-color: #0d6efd;
                color: #ffffff !important;
            }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 5rem; /* espacio para navbar fija */
            padding-bottom: 6rem; /* espacio para footer fijo */
        }

        .contenedor-translucido {
            background-color: transparent;
            backdrop-filter: none;
            padding: 2rem 3rem;
            border-radius: 12px;
            box-shadow: none;
            animation: fadeIn 0.6s ease-in-out;
            max-width: 1000px;
            width: 100%;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            z-index: 999;
            background-color: #1f2d3d;
            color: #f8f9fa;
            padding: 2rem 0;
            border-top: 1px solid rgba(255,255,255,0.3);
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .dark-mode body {
            background-image: none;
            background-color: #121212;
        }

        .dark-mode .contenedor-translucido {
            background-color: transparent;
            color: #e0e0e0;
        }

        .dark-mode footer {
            background-color: #000000;
            color: #e0e0e0;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .dark-mode .navbar {
            background-color: #000000;
        }

        .dark-mode .nav-link:hover {
            background-color: #333333;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-uppercase" asp-controller="Home" asp-action="Index">Obligatorio.WebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>

                        @if (Context.Session.GetString("idUsuarioLogueado") != null)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>

                        }

                        @if (Context.Session.GetString("rol") == "Administrador")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="TipoGasto" asp-action="Index">Tipos de Gastos</a></li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="pagosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pagos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="pagosDropdown">
                                <li><a class="dropdown-item" asp-controller="Pago" asp-action="Index">Ver Pagos</a></li>
                                @if (Context.Session.GetString("idUsuarioLogueado") != null)
                                {
                                    <li><a class="dropdown-item" asp-controller="Pago" asp-action="CreatePagoUnico">Pago Único</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pago" asp-action="CreatePagoRecurrente">Pago Recurrente</a></li>
                                }

                            </ul>
                        </li>
                        @if (Context.Session.GetString("rol") == "Gerente")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="pagosReporte" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Reporte
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="pagosDropdown">
                                    <li><a class="dropdown-item" asp-controller="Pago" asp-action="UsuarioPagoSuperior">Reporte de pago</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pago" asp-action="PagosMesAnio">Reporte mensual</a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("idUsuarioLogueado") != null)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a></li>
                        }
                        else
                        {

                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Login">Login</a></li>
                        }

                        <li class="nav-item">
                            <button class="btn btn-sm btn-outline-light ms-2" onclick="toggleDarkMode()">🌗</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="contenedor-translucido">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <strong>Obligatorio.WebApp</strong><br />
                    Sistema de Gestión de Pagos Empresariales
                </div>
                <div class="col-md-6 text-md-end">
                    &copy; 2025 - Obligatorio.WebApp<br />
                    <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>