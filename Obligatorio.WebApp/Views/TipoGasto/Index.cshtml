@model IEnumerable<Obligatorio.LogicaAplicacion.Dtos.TiposDeGasto.TiposDeGastoDtoListado>

@{
    ViewData["Title"] = "Listado de Tipos de Gasto";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-10">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body">
                <h2 class="text-center mb-4 text-uppercase fw-semibold">Listado de Tipos de Gasto</h2>

                <div class="d-flex justify-content-end mb-3">
                    <a asp-action="Create" class="btn btn-outline-primary">Crear Nuevo</a>
                </div>

                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>