@model Obligatorio.LogicaAplicacion.Dtos.TiposDeGasto.TiposDeGastoDtoListado

@{
    ViewData["Title"] = "Eliminar Tipo de Gasto";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 rounded">
            <div class="card-body">
                <h2 class="text-center mb-4 text-uppercase fw-semibold text-danger">Eliminar Tipo de Gasto</h2>

                <h5 class="text-center mb-3">¿Estás seguro que deseas eliminar este registro?</h5>

                <dl class="row">
                    <dt class="col-sm-4 fw-bold">ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4 fw-bold">Descripción</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                </dl>

                <p>@ViewBag.Mensaje</p>

                <form asp-action="Delete" class="mt-4">
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>